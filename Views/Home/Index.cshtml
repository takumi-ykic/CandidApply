    <form asp-action="MoveToLogin" asp-controller="Home" method="get">
        <button type="submit" class="btn btn-primary btn-lg">Log in</button>
    </form>
    <form asp-action="MoveToRegister" asp-controller="Home" method="get">
        <button type="submit" class="btn btn-success btn-lg">Register</button>
    </form>
</div>
